<CreateFlashcard>:
    name: 'createFlashcard'


    canvas:
        Color:
            rgba: bg_color
        Rectangle:
            pos: self.pos
            size: self.size

    front: front
    back: back

    FloatLayout:

        Label:
            text: 'Add flashcards to your set!'
            font_size: (min(root.width, root.height)/10)**(0.8)
            pos_hint: {"x":0.3, "top":0.95}
            size_hint: 0.4, 0.15

        Label:
            text:"Front page: "
            font_size: (min(root.width, root.height)/14)**(0.8)
            pos_hint: {"x":0.1, "top":0.75}
            size_hint: 0.35, 0.1

        TextInput:
            id: front
            font_size: (min(root.width, root.height)/14)**(0.8)
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.75}
            size_hint: 0.4, 0.1

        Label:
            text:"Back page: "
            font_size: (min(root.width, root.height)/14)**(0.8)
            pos_hint: {"x":0.1, "top":0.6}
            size_hint: 0.35, 0.1

        TextInput:
            id: back
            font_size: (min(root.width, root.height)/10)**(0.8)
            multiline: False
            pos_hint: {"x": 0.45, "top":0.6}
            size_hint: 0.4, 0.1

        Button:
            pos_hint:{"x":0.35,"y":0.1}
            size_hint: 0.3, 0.2
            font_size: (min(root.width, root.height)/10)**(0.8)
            text: "Create"
            on_release:
                root.manager.transition.direction = "up"
                root.addFlashcard()
        Button:
            pos_hint:{"x": 0.0, "top":0.125}
            size_hint:0.2, 0.1
            text: "Main menu"
            font_size: (min(root.width, root.height)/18)**(0.8)
            on_release:
                root.manager.transition.direction = "up"
                root.mainMenu()
        Button:
            pos_hint:{"x": 0.8, "top":0.125}
            size_hint:0.2, 0.1
            text: "Upload Set"
            font_size: (min(root.width, root.height)/18)**(0.8)
            on_release:
                root.manager.transition.direction = "up"
                root.uploadSet()

